<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.FingerFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/appName"
            android:layout_marginTop="@dimen/_12sdp"
            android:includeFontPadding="false"
            android:fontFamily="@font/chakra_petch_700_bold"
            android:textSize="@dimen/_20sdp"
            android:textColor="#83FFF8"
            android:text="@string/app_name_uppercase"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:adjustViewBounds="true"
            android:paddingBottom="@dimen/_4sdp"
            android:id="@+id/line1"
            app:layout_constraintTop_toBottomOf="@id/appName"
            app:layout_constraintBottom_toBottomOf="@id/appName"
            android:src="@drawable/line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            app:layout_constraintBottom_toBottomOf="@id/line1"
            app:layout_constraintTop_toBottomOf="@id/line1"
            android:src="@drawable/line2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            app:layout_constraintHorizontal_bias="0.3"
            app:layout_constraintEnd_toStartOf="@id/appName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/line1"
            app:layout_constraintBottom_toTopOf="@id/line1"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_hint"
            android:layout_width="@dimen/_28sdp"
            android:layout_height="wrap_content"/>
        <ImageView
            app:layout_constraintHorizontal_bias="0.7"
            app:layout_constraintTop_toTopOf="@id/line1"
            app:layout_constraintBottom_toTopOf="@id/line1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/appName"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_language"
            android:layout_width="@dimen/_28sdp"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/top"
        app:layout_constraintBottom_toTopOf="@id/bot"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:adjustViewBounds="true"
            android:src="@drawable/title_frame_blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:adjustViewBounds="true"
                android:src="@drawable/message_frame_blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="@dimen/_12sdp"
                android:includeFontPadding="false"
                android:fontFamily="@font/chakra_petch_500_medium"
                android:paddingBottom="@dimen/_3sdp"
                android:textColor="#FFFFFF"
                android:text="@string/hold_to_scan"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:adjustViewBounds="true"
                android:src="@drawable/ic_light_left"
                android:layout_width="@dimen/_86sdp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginStart="@dimen/_40sdp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_light_right"
                android:layout_width="@dimen/_86sdp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <ImageView
            android:layout_marginTop="@dimen/_8sdp"
            android:src="@drawable/ic_light_bot"
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/_175sdp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:id="@+id/finger"
            android:layout_marginBottom="@dimen/_18sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:adjustViewBounds="true"
            android:src="@drawable/finger_print"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/line3"
            android:layout_marginBottom="@dimen/_8sdp"
            android:src="@drawable/line3"
            app:layout_constraintBottom_toTopOf="@id/finger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintEnd_toStartOf="@id/finger"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line3"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_left"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="wrap_content"/>
        <ImageView
            app:layout_constraintTop_toBottomOf="@id/line3"
            app:layout_constraintStart_toEndOf="@id/finger"
            app:layout_constraintEnd_toEndOf="parent"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_right"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
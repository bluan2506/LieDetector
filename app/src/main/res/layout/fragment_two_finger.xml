<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.TwoFingerFragment"
    android:background="#005647">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/appName"
            android:layout_marginTop="@dimen/_12sdp"
            android:includeFontPadding="false"
            android:fontFamily="@font/chakra_petch_700_bold"
            android:textSize="@dimen/_20sdp"
            android:textColor="#83FFF8"
            android:text="@string/app_name_uppercase"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:adjustViewBounds="true"
            android:paddingBottom="@dimen/_4sdp"
            android:id="@+id/line1"
            app:layout_constraintTop_toBottomOf="@id/appName"
            app:layout_constraintBottom_toBottomOf="@id/appName"
            android:src="@drawable/line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            app:layout_constraintBottom_toBottomOf="@id/line1"
            app:layout_constraintTop_toBottomOf="@id/line1"
            android:src="@drawable/line2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            app:layout_constraintHorizontal_bias="0.3"
            app:layout_constraintEnd_toStartOf="@id/appName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/line1"
            app:layout_constraintBottom_toTopOf="@id/line1"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_hint"
            android:layout_width="@dimen/_28sdp"
            android:layout_height="wrap_content"/>
        <ImageView
            app:layout_constraintHorizontal_bias="0.7"
            app:layout_constraintTop_toTopOf="@id/line1"
            app:layout_constraintBottom_toTopOf="@id/line1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/appName"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_language"
            android:layout_width="@dimen/_28sdp"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toBottomOf="@id/top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="1.0"
        app:layout_constraintHeight_percent="1.0"
        app:layout_constraintDimensionRatio="H:W"
        android:layout_width="0dp"
        android:layout_height="0dp">

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>